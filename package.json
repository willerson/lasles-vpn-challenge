{
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prestart": "cp config.json.dist config.json",
    "start": "run-p start:dev lint-watch",
    "hot": "run-p hot:dev lint-watch",
    "start:dev": "cross-env NODE_ENV=development webpack --colors --config resources/build/webpack.development.js",
    "hot:dev": "cross-env NODE_ENV=hot webpack-dev-server --colors --config resources/build/webpack.development.js",
    "build": "cross-env WPEMERGE_COMBINED_BUILD=1 run-s -l build:production",
    "build:debug": "cross-env NODE_ENV=debug webpack --colors --config resources/build/webpack.production.js",
    "build:production": "cross-env NODE_ENV=production webpack --colors --config resources/build/webpack.production.js",
    "lint": "run-s -cl lint:scripts lint:styles lint:wp lint:wpsrc",
    "lint-fix": "run-s -cl lint-fix:scripts lint-fix:styles lint-fix:wp lint-fix:wpsrc",
    "lint:wp": "./vendor/bin/phpcs --colors --standard=phpcs.xml ./",
    "lint:wpsrc": "./vendor/bin/phpcs --colors --standard=./app/src/phpcs.xml ./app/src/",
    "lint:scripts": "eslint --color ./resources/scripts/**",
    "lint:styles": "stylelint --color ./resources/styles/**",
    "lint-fix:wp": "./vendor/bin/phpcbf --colors --standard=phpcs.xml ./",
    "lint-fix:wpsrc": "./vendor/bin/phpcbf -q --colors --standard=./app/src/phpcs.xml ./app/src/",
    "lint-fix:scripts": "eslint --color --fix ./resources/scripts/**",
    "lint-fix:styles": "stylelint --color --fix ./resources/styles/**",
    "lint-watch:phpcs": "chokidar \"**/*.php\" -i \"app/src/**/*.php\" -c \"npm run lint:phpcs --silent\"",
    "lint-watch:scripts": "chokidar \"resources/scripts/**/*.js\" -c \"npm run lint:scripts --silent\"",
    "lint-watch:styles": "chokidar \"resources/styles/**/*.scss\" -c \"npm run lint:styles --silent\"",
    "lint-watch": "run-p lint-watch:phpcs lint-watch:scripts lint-watch:styles",
    "i18n": "run-s -cl i18n:textdomain i18n:pot",
    "i18n:textdomain": "wpi18n addtextdomain --exclude=dist,node_modules,resources,tests,vendor --textdomain=fuerza",
    "i18n:pot": "wpi18n makepot --exclude=dist,node_modules,resources,tests,vendor --type=wp-theme --main-file=style.css --domain-path=languages/ --pot-file=fuerza.pot --textdomain=fuerza",
    "rebrand": "node resources/build/rebrand/rebrand.js",
    "release": "run-s build release:zip",
    "release:zip": "node resources/build/release/release.js wpemerge-release",
    "postinstall": "cd ../../.. && husky install wp-content/themes/fuerzastudio/.husky"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "dependencies": {
    "airbnb-browser-shims": "^3.3.0",
    "autoprefixer": "^9.8.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "bootstrap": "^5.1.3",
    "chokidar": "^3.4.0",
    "clean-webpack-plugin": "^0.1.19",
    "cross-env": "^7.0.2",
    "css-loader": "^3.5.3",
    "file-loader": "^6.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-webpack-plugin": "^2.1.1",
    "import-glob": "^1.5.0",
    "loader-utils": "^1.1.0",
    "lodash": "^4.17.15",
    "mini-css-extract-plugin": "^0.9.0",
    "npm-run-all": "^4.1.3",
    "postcss-discard-comments": "^4.0.2",
    "postcss-loader": "^3.0.0",
    "sass": "^1.49.7",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "svg-sprite-loader": "^4.2.5",
    "swiper": "^8.2.5",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-spritesmith": "^0.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "archiver": "^4.0.1",
    "chalk": "^4.0.0",
    "change-case": "^4.1.1",
    "chokidar-cli": "^3.0.0",
    "commitizen": "^4.2.4",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-sonarjs": "^0.11.0",
    "eslint-plugin-unicorn": "^40.1.0",
    "glob": "^7.1.4",
    "husky": "^7.0.4",
    "inquirer": "^7.1.0",
    "node-wp-i18n": "^1.2.1",
    "postcss": "^8.4.6",
    "replace-in-file": "^6.0.0",
    "shelljs": "^0.8.3",
    "stylelint": "^14.5.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "webpack-dev-server": "^3.10.3"
  },
  "config": {
    "commitizen": {
      "path": "wp-content/themes/fuerzastudio/node_modules/cz-conventional-changelog"
    }
  }
}
